<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true" >
        <shape>
            <gradient
                    android:startColor="@color/yellowBtnPrimaryPressed"
                    android:endColor="@color/yellowBtnPrimaryPressed" android:angle="270" />

            <stroke android:width="3dp" android:color="@color/yellowBtnPrimaryPressed" />

            <corners android:radius="3dp" />

            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                    android:endColor="@color/yellowBtnPrimaryFocused"
                    android:startColor="@color/yellowBtnPrimaryFocused"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="@color/yellowBtnPrimaryFocused" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient
                    android:endColor="@color/yellowBtnPrimary"
                    android:startColor="@color/yellowBtnPrimary"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="@color/yellowBtnPrimary" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                    android:endColor="@color/yellowBtnPrimaryDisabled"
                    android:startColor="@color/yellowBtnPrimaryDisabled"
                    android:angle="270" />
            <stroke
                    android:width="3dp"
                    android:color="@color/yellowBtnPrimaryDisabled" />
            <corners
                    android:radius="3dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>