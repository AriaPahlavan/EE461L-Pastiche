<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pastiche.pastiche.MainActivity"
        android:fitsSystemWindows="false"
>
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    <Button
        android:text="@string/picture_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="29dp"
        android:id="@+id/button"
        android:onClick="capturePicture" />

    //Todo: remove this test button after merging with login
    <Button
        android:text="Network Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:id="@+id/button2"
        android:onClick="testLogin"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_above="@+id/button2"
        android:layout_alignStart="@+id/responseText"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView"
        android:layout_alignEnd="@+id/button"
        android:layout_below="@+id/responseText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/responseText"
        android:layout_below="@+id/toolbar"
        android:layout_alignEnd="@+id/button" />

</RelativeLayout>
