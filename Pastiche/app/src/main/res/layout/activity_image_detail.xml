<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_image_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.pastiche.pastiche.ui.ImageDetailActivity"
        android:background="@color/colorPrimaryLightest"
>

    <!-- image -->
    <ImageView
            android:layout_width="0dp"
            android:layout_height="183dp" app:srcCompat="@drawable/concert"
            android:id="@+id/img_detailActivity_picture"
            android:scaleType="fitXY"
            android:elevation="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <!-- owner icon -->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/p_user_icon"
            android:id="@+id/img_detailActivity_user_icon" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/img_detailActivity_picture" android:layout_marginStart="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:clickable="true"
    />

    <!-- viewed icon -->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/photo_views_icon"
            android:id="@+id/img_detailActivity_view_icon"
            app:layout_constraintRight_toRightOf="@+id/img_detailActivity_user_icon" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/img_detailActivity_user_icon"
            app:layout_constraintLeft_toLeftOf="@+id/img_detailActivity_user_icon" app:layout_constraintHorizontal_bias="0.0"
            android:clickable="true"

    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_detailActivity_user_name"
            app:layout_constraintBottom_toBottomOf="@+id/img_detailActivity_user_icon"
            app:layout_constraintTop_toTopOf="@+id/img_detailActivity_user_icon" android:layout_marginStart="32dp"
            app:layout_constraintLeft_toRightOf="@+id/img_detailActivity_user_icon"
            tools:text="Aria Pahlavan"
            android:textColor="@color/colorAccentPinkDarker"
            android:clickable="true"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_detailActivity_num_views"
            app:layout_constraintBottom_toBottomOf="@+id/img_detailActivity_view_icon"
            app:layout_constraintRight_toRightOf="@+id/txt_detailActivity_user_name" app:layout_constraintTop_toTopOf="@+id/img_detailActivity_view_icon"
            android:layout_marginStart="32dp" app:layout_constraintLeft_toRightOf="@+id/img_detailActivity_view_icon"
            tools:text="18 views"
            android:textColor="@color/colorAccentPinkDarker"
            android:clickable="true"
    />

</android.support.constraint.ConstraintLayout>
